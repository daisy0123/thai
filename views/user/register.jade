extends ../public/layout

block content
    link(href="https://cdn.bootcss.com/animate.css/3.5.2/animate.min.css" rel="stylesheet")
    .container-fluid
        .row.register
            h4.text-center.animated.zoomIn 用户注册
            .col-md-8.col-md-offset-2.register-page
                form.form-horizontal(method="post" action="/user/register")
                    .form-group
                        label.col-sm-2.control-label(for="username") 用户名
                        .col-sm-8
                            input(type="text" class="form-control" id="username" name="username" placeholder="请输入用户名")
                    .form-group
                        label.col-sm-2.control-label(for="pass") 密码
                        .col-sm-8
                            input(type="password" class="form-control" id="pass" name="password" placeholder="请输入密码")
                    .form-group.text-center
                        button(type="submit" class="btn btn-default") 注册




